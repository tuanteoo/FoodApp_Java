<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_payment_imageFood"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pizza3"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/quantity_foodOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/item_payment_imageFood"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_toEndOf="@id/quantity_foodOrder"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/item_payment_nameFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/text"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/totalprice_foodorder"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/totalprice_foodorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        tools:ignore="HardcodedText" />

</RelativeLayout>