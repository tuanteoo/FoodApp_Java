<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.PaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="47sp"
        android:background="@color/purple_500"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/payment"
            android:textColor="@color/white" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fullname"
            android:textColor="#202020"
            android:layout_gravity="start"
            android:gravity="center"/>
        <EditText
            android:id="@+id/editText_payment_name"
            android:autofillHints="name"
            android:inputType="text"
            android:layout_width="350sp"
            android:layout_height="50sp"
            android:maxLines="1"
            android:background="@drawable/bg_edit_text"
            android:paddingStart="10sp"
            android:paddingEnd="0sp"
            android:layout_marginTop="2sp"
            tools:ignore="LabelFor" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textColor="#202020"
            android:layout_gravity="start"
            android:gravity="center"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/editText_payment_phone"
            android:inputType="number"
            android:autofillHints="phone"
            android:layout_width="350sp"
            android:layout_height="50sp"
            android:maxLines="1"
            android:background="@drawable/bg_edit_text"
            android:maxLength="10"
            android:paddingStart="10sp"
            android:paddingEnd="0sp"
            android:layout_marginTop="2sp"
            tools:ignore="TextFields" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textColor="#202020"
            android:layout_gravity="start"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editText_payment_address"
            android:layout_width="350sp"
            android:layout_height="50sp"
            android:layout_marginTop="2sp"
            android:autofillHints="postalAddress"
            android:background="@drawable/bg_edit_text"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="10sp"
            android:paddingEnd="0sp"
            android:textColorHint="#78909C"
            tools:ignore="LabelFor" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền"
            android:textColor="#202020"
            android:layout_gravity="start"
            android:gravity="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/pm_totalPrice"
            android:autofillHints="postalAddress"
            android:layout_width="350sp"
            android:layout_height="50sp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/bg_edit_text"
            android:paddingStart="10sp"
            android:paddingEnd="0sp"
            android:layout_marginTop="2sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_PaymentBill"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_design"
        android:padding="14dp"
        android:text="Thanh Toán"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_CancelOrder"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_design"
        android:padding="14dp"
        android:text="Huỷ"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_gravity="center"/>

</LinearLayout>