<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UserInfoActivity">

    <TextView
        android:id="@+id/title_UserInfo"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông Tin Cá Nhân"
        android:textSize="25sp"

        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="@+id/title_UserInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".6"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="20dp"
        android:layout_weight="8"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Họ và Tên"
                android:textColor="#202020"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="350sp"
                android:layout_height="50sp"
                android:layout_marginTop="2sp"
                android:autofillHints="name"
                android:background="@drawable/bg_edit_text"
                android:hint="Họ và Tên"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="10sp"
                android:paddingEnd="0sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Giới Tính"
                android:textColor="#202020"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/user_gender"
                android:layout_width="350sp"
                android:layout_height="50sp"
                android:layout_marginTop="2sp"
                android:inputType="date"
                android:background="@drawable/bg_edit_text"
                android:paddingStart="10sp"
                android:paddingEnd="0sp"
                tools:ignore="Autofill,TextFields" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Ngày Sinh"
                android:textColor="#202020"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/user_dateofbirth"
                android:layout_width="350sp"
                android:layout_height="50sp"
                android:layout_marginTop="2sp"
                android:background="@drawable/bg_edit_text"
                android:inputType="date"
                android:paddingStart="10sp"
                android:paddingEnd="0sp"
                tools:ignore="Autofill,HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Số điện thoại"
                android:textColor="#202020"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/user_phonenumber"
                android:layout_width="350sp"
                android:layout_height="50sp"
                android:layout_marginTop="2sp"
                android:autofillHints="phone"
                android:background="@drawable/bg_edit_text"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingStart="10sp"
                android:paddingEnd="0sp"
                tools:ignore="TextFields" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Mật khẩu"
                android:textColor="#202020"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/user_password"
                android:layout_width="350sp"
                android:layout_height="50sp"
                android:layout_marginTop="2sp"
                android:autofillHints="name"
                android:background="@drawable/bg_edit_text"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="10sp"
                android:paddingEnd="0sp"
                tools:ignore="TextFields" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_Update"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:background="@drawable/btn_bg_design"
        android:padding="15sp"
        android:text="Cập nhật"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.301"
        tools:ignore="HardcodedText,InvalidId,MissingConstraints,OnClick,RtlHardcoded" />

    <Button
        android:id="@+id/btn_Cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_design"
        android:padding="15sp"
        android:text="Huỷ"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias=".3"
        android:layout_marginRight="40dp"
        tools:ignore="HardcodedText,InvalidId,MissingConstraints,OnClick,RtlHardcoded" />

</androidx.constraintlayout.widget.ConstraintLayout>